<form class="form-horizontal export-form">
  <div class="inputs">
    {{#if exportProgress}}
      {{loading-spinner size="small"}}
    {{else}}
      {{d-button icon="download" action="export" class="btn btn-primary" label="admin.lm_seo.topics.export"}}
    {{/if}}
  </div>
</form>


<div class="form-horizontal import-form">
  <div class="inputs">
    {{#if importProgress}}
      {{loading-spinner size="small"}}
    {{else}}
      <input onchange={{action "import"}} type="file" id="import-file-input" accept='text/csv,text/plain'><br>
      <span class="description">{{i18n 'admin.lm_seo.topics.import_description'}}</span><br>
    {{/if}}
  </div>
</div>

